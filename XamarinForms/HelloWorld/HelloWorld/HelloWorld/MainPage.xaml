<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.MainPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Label x:Name="greetingLabel" Text="Welcome to my first App in Xamarin!"
                VerticalOptions="CenterAndExpand"
                TextColor="Blue"
                FontAttributes="Bold"
                FontSize="20"
                HorizontalOptions="CenterAndExpand" />
         <Entry x:Name="entryName" Margin="20,0,20,0" VerticalOptions="CenterAndExpand" Placeholder="Enter your name"></Entry>
         <Button Margin="20,0,20,0" VerticalOptions="CenterAndExpand" Text="Say Hello" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>